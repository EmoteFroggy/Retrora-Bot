# Server Configuration
PORT=3000
NODE_ENV=development

# Production URLs (update when deployed)
FRONTEND_URL=https://emotefroggy.github.io/Retrora-Bot
BACKEND_URL=https://retrora-bot.vercel.app

# Twitch API Credentials (from Twitch Developer Console)
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here
TWITCH_CALLBACK_URL=https://retrora-bot.vercel.app/auth/twitch/callback

# Bot Configuration
BOT_USERNAME=your_bot_username
BOT_TOKEN=oauth:your_bot_token_here
CHANNEL_NAME=EmoteFroggy

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/retrora-bot

# Session Secret
SESSION_SECRET=your_secret_key_here

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000 